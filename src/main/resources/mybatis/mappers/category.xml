<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">



<sql id="findCategory">
<![CDATA[
		select no, name, p_count as postCount , content , blog_no as blogNo
		from category
	]]>
</sql>


<select id="getList" resultType="categoryvo">
	<include refid="findCategory"/>
</select>


<insert id="insertCategory" parameterType="categoryvo">
	<![CDATA[
		insert into category
		values(null,#{name},#{postCount},#{content},#{blogNo})
	]]>

</insert>

<select id="getCategory"  parameterType="long"  resultType="categoryvo">
	<include refid="findCategory"/>
	<![CDATA[
		where no = #{_parameter}
	]]>
</select>



</mapper>
